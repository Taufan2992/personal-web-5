    <link rel="stylesheet" href="/public/style.css">
    <title>Document</title>
    <script src="contact.js"></script>
</head>
<body>
  <nav class="navbar navbar-expand-lg navbar-light bg-light fw-bold">
    <div class="container">
        <img src="/public/assets/logo.png" class="navbar-brand me-5"> 
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
            data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false"
            aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                <li class="nav-item">
                    <a class="nav-link active" aria-current="page" href="/">Home</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link " aria-current="page" href="/addmyproject">Add My Project</a>
                </li>                    
            </ul>
                <a class="border-rounded btn bg-dark text-white px-4" href="/contact" >Contact Me</a>

        </div>
    </div>
</nav>


<div class=bg-lightgrey>
    <form class="container width-form py-5 fw-bold">
        <h1 class="text-center mb-4">Get in Touch</h1>
        <div class="mb-3">
            <label for="inputName" class="form-label">Name</label>
            <input type="text" class="form-control" id="input-name" >
        </div>
        <div class="mb-3">
            <label for="inputEmail" class="form-label">Email address</label>
            <input type="email" class="form-control" id="input-email" >
        </div>
        <div class="mb-3">
            <label for="inputNumber" class="form-label">Phone Number</label>
            <input type="text" class="form-control" id="input-number" >
        </div>
        <div class="mb-3">
            <label for="inputSubject">Subject</label>
            <select class="form-select my-2" aria-label="Default select example" id="select-subject">
                <option hidden></option>
                <option value="1">Im Hiring</option>
                <option value="2">Let's Collaboration</option>
                <option value="3">Let's Talk</option>
            </select>
        </div>
            
        <div class="mb-3">
            <label for="inputMessage" class="form-label">Message</label>
            <textarea class="form-control" type="text" id="input-message" rows="5"></textarea>
        </div>
        <div class="text-end" onclick="submitform()">
            <button type="button" class="btn btn-dark px-5 border-rounded my-3">Submit</button>
        </div>
    </form>
</div>
</body>
</html>