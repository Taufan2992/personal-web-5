<!--bagian hero-->

<section>
    <div class="bg-lightgrey d-flex align-items-center justify-content-center">
        <div class="width-form ">
            <h4 class="mb-4 text-center pt-5">Add Project</h4>
            
            <form class="needs-validation" action="addmyproject" method="POST" enctype="multipart/form-data">
              <div class="row g-3">

                <div class="col-12">
                    <label for="projectName" class="form-label h5">Project Name</label>
                    <input class="form-control" id="project-name" name="name" >
                </div>
                <div class="col-sm-6">
                  <label for="startDate" class="form-label h5">Start Date</label>
                  <input type="date" class="form-control" id="start-date" name="start_date">
                </div>
    
                <div class="col-sm-6">
                  <label for="endDate" class="form-label h5">End Date</label>
                  <input type="date" class="form-control" id="end-date" name="end_date">
                </div>
                <div class="mb-3">
                    <label for="formContent" class="form-label h5">Description</label>
                    <textarea class="form-control" id="content" rows="3" name="description"></textarea>
                </div>
                <div class="h5">
                    Tecnologies
                </div>
                <div class="row">
                    <div class="col-6">
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" value="true" id="node-js" name="nodejs">
                            <label class="form-check-label" for="nodeJs">
                              Node Js
                            </label>
                          </div>
                          <div class="form-check">
                            <input class="form-check-input" type="checkbox" value="true" id="react-js" name="reactjs">
                            <label class="form-check-label" for="reactJs">
                              React Js
                            </label>
                          </div>
                    </div>
                    <div class="col-6">
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" value="true" id="next-js" name="nextjs">
                            <label class="form-check-label" for="nextjs">
                              Next Js
                            </label>
                          </div>
                          <div class="form-check">
                            <input class="form-check-input" type="checkbox" value="true" id="typescript" name="typescript">
                            <label class="form-check-label" for="typescript">
                              Typescript
                            </label>
                          </div>
                    </div>
                </div>

                <div class="mb-3">
                    <label for="uploadImage" class="form-label h5">Upload Image</label>
                    <input class="form-control" type="file" id="input-project-image" name="image">
                </div>
   
 
              <div class="d-flex justify-content-end">
                <button class="btn btn-dark rounded-pill px-4 mb-5" type="submit">Submit</button>
              </div>
            </form>
          </div>
    </div>
</section>






