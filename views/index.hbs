<div class="container-addproject">
  <div class="myproject">
      <h1>My Project</h1>

{{!-- bagian iterasi --}}

      <div class="myproject-content" style="padding-left: 100px;">
            {{#each blogs}}
          <div class="myproject-content-item">
              <div class="myproject-item-image">
                  <img src="uploads/{{this.image}}" alt="">
              </div>
              <div class="myproject-item-title">
                  <h3 style="margin-top:10px"><a style="text-decoration: none; color: black; "  href="/project-detail/{{this.id}}">{{this.name}}</a> </h3>
                  <p>{{this.duration}}</p>
              </div>
              <div class="myproject-item-text">
                  <p>{{this.description}}</p>
              </div>
              <div class="myproject-item-icon">
                  {{#if this.nodejs}}
                  <img id="node-js" src="public/assets/nodejs.png" alt="">
                  {{/if}}
                  {{#if this.nextjs}}
                  <img id="next-js" src="public/assets/nextjs.png" alt="">
                  {{/if}}
                  {{#if this.reactjs}}
                  <img id="react-js" src="public/assets/react.png" alt="">
                  {{/if}}
                  {{#if this.typescript}}
                  <img id="typescript" src="public/assets/typescript.png" alt="">
                  {{/if}}
              </div>
              <div class="myproject-item-button">
                  <div class="button-left">
                      <button><a style="text-decoration: none; color:white" href="/editproject/{{this.id}}">edit</a> </button>
                  </div>
                  <div class="button-right">
                      <button><a style="text-decoration: none; color:white" href="/delete/{{this.id}}">delete</a> </button>
                  </div>
              </div>
  
          </div>
            {{/each}}


      </div>

      
  </div>

</div>

